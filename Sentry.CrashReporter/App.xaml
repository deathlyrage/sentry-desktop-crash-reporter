<Application x:Class="Sentry.CrashReporter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Styles/Fonts.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/Images.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="#262626" />

            <SolidColorBrush x:Key="SolidBackgroundFillColorBaseBrush" Color="#262626" />
            <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#2A2A2A" />
            <SolidColorBrush x:Key="TextControlBackground" Color="#1F1F1F" />

            <!-- Text selection highlight -->
            <Color x:Key="TextControlSelectionHighlightColor">#E0552A</Color>
            <SolidColorBrush x:Key="TextSelectionHighlightColorThemeBrush"
                 Color="#E0552A" />

            <!-- Text caret (cursor) -->
            <SolidColorBrush x:Key="TextControlCaretForegroundBrush"
                 Color="#E0552A" />

            <!-- TextBox border colors -->
            <SolidColorBrush x:Key="TextControlBorderBrush"
                 Color="#E0552A" />
            <SolidColorBrush x:Key="TextControlBorderBrushPointerOver"
                 Color="#E0552A" />
            <SolidColorBrush x:Key="TextControlBorderBrushFocused"
                 Color="#E0552A" />
            <SolidColorBrush x:Key="TextControlBorderBrushDragging"
                 Color="#E0552A" />


            <!-- Chat Icon -->
            <SolidColorBrush x:Key="AccentFillColorDefaultBrush"
                 Color="#E0552A" />
            <SolidColorBrush x:Key="AccentFillColorSecondaryBrush"
                 Color="#E0552A" />
            <SolidColorBrush x:Key="AccentFillColorTertiaryBrush"
                 Color="#E0552A" />


            <!-- Accent system colors -->
            <Color x:Key="SystemAccentColor">#E0552A</Color>
            <Color x:Key="SystemAccentColorDark1">#C04824</Color>
            <Color x:Key="SystemAccentColorDark2">#A33A1E</Color>
            <Color x:Key="SystemAccentColorDark3">#862D18</Color>

<SolidColorBrush x:Key="SystemControlFocusVisualPrimaryBrush"
                 Color="#E0552A" />
<SolidColorBrush x:Key="SystemControlFocusVisualSecondaryBrush"
                 Color="#E0552A" />


            <!-- Accent buttons -->
            <SolidColorBrush x:Key="AccentButtonBackground"            Color="#E0552A" />
            <SolidColorBrush x:Key="AccentButtonBackgroundPointerOver" Color="#C04824" />
            <SolidColorBrush x:Key="AccentButtonBackgroundPressed"     Color="#A33A1E" />
            <SolidColorBrush x:Key="AccentButtonBackgroundDisabled"    Color="#862D18" Opacity="0.4" />

            <SolidColorBrush x:Key="SystemAccentColorBrush" Color="{StaticResource SystemAccentColor}" />
            <SolidColorBrush x:Key="AccentButtonForeground" Color="#FFFFFF" />
            <SolidColorBrush x:Key="AccentButtonForegroundPointerOver" Color="#FFFFFF" />
            <SolidColorBrush x:Key="AccentButtonForegroundPressed" Color="#FFFFFF" Opacity="0.9" />
            <SolidColorBrush x:Key="AccentButtonForegroundDisabled" Color="#FFFFFF" Opacity="0.75" />

            <!-- ReSharper disable Xaml.LanguageLevel -->
            <x:Double x:Key="ExpanderChevronButtonSize">20</x:Double>
            <!-- ReSharper restore Xaml.LanguageLevel -->
            <SolidColorBrush x:Key="ExpanderChevronBackground" Color="Transparent" />
            <SolidColorBrush x:Key="ExpanderChevronPointerOverBackground" Color="Transparent" />
            <SolidColorBrush x:Key="ExpanderChevronPressedBackground" Color="Transparent" />
            <SolidColorBrush x:Key="ExpanderChevronForeground" Color="{ThemeResource SystemColorButtonFaceColor}" />
            <SolidColorBrush x:Key="ExpanderChevronPointerOverForeground" Color="{ThemeResource SystemColorButtonFaceColor}" Opacity="0.6" />
            <SolidColorBrush x:Key="ExpanderChevronPressedForeground" Color="{ThemeResource SystemColorButtonFaceColor}" Opacity="0.4" />
            <Style TargetType="Expander" BasedOn="{StaticResource DefaultExpanderStyle}">
                <!-- ReSharper disable once Xaml.DependencyPropertyResolveError -->
                <Setter Property="MinHeight" Value="{ThemeResource TextControlThemeMinHeight}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
